= render :partial => 'shared/header'

div.container.featured-products.content
  = render 'shared/search', :local => { :path => category_products_path(@category_name) }  
  h2 = @category_name
  = render 'shared/show_products', collection: @products || 'No products'
  = paginate @products, theme: 'twitter-bootstrap-3'
= render :partial => 'shared/footer'